<style>
  #topbar {
    position:fixed;
    z-index:1;
    background:#79BAEC;
  }
  #topbar .toggle{
    font-size:8vw;
    width:33vw;
    margin:0.1vw;
  }
  .toggle a {
    width:100%;
    height:100%;
  }
  .toggle .glyphicon {
    text-align: center;
  }
  #topbar-clearfix {
    height:15vw;
  }
</style>



<nav id="topbar" class="btn-group" role="group" aria=label="...">
  
  <button id="toggle-timeline" class="toggle btn btn-default">
    <a href="/"><span class="glyphicon glyphicon glyphicon-th-list"></span></a>
  </button>


  <button id="toggle-data" class="toggle btn btn-default">
    <a href="/users/<%=session[:user_id]%>/analysis"><span class="glyphicon glyphicon glyphicon-stats"></span></a>
  </button>


  <button id="toggle-setting" class="toggle btn btn-default">
    <a href="/settings"><span class="glyphicon glyphicon glyphicon-cog"></span></a>
  </button>
  
</nav>
<div id="topbar-clearfix"></div>
<input type="hidden" id="session-id" value="<%=session[:user_id]%>">

